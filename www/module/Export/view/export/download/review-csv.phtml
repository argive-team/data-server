<?php
$isFirst = true;
if (count($this->reviews) > 0) {
    $fh = @fopen( 'php://output', 'w' );
    foreach ($this->reviews as $review) {
        if ($isFirst) {
            $isFirst = false;
            fputcsv($fh, $review->getCsvColumnHeader());
        }
        fputcsv($fh, $review->getAsCsvArray());
    }
    fclose($fh);
}
